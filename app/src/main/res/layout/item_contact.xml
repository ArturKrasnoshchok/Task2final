<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrainHolderContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginTop="@dimen/corner_radius"
    android:layout_marginEnd="@dimen/margin_large"
    android:background="@drawable/selector_contact_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView_photo"
        android:layout_width="@dimen/contacts_size_photo"
        android:layout_height="@dimen/contacts_size_photo"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_my_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toEndOf="@+id/imageView_photo"
        app:layout_constraintTop_toTopOf="@+id/imageView_photo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_career_my_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:text="@string/career"
        android:textColor="@color/grey_text_2"
        android:textSize="@dimen/text_size_little"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_photo"
        app:layout_constraintStart_toEndOf="@+id/imageView_photo" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        android:background="@drawable/selector_basket_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/basket_icon" />

    <CheckBox
        android:id="@+id/checkBoxContactsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_basket"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>